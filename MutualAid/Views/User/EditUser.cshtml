@model MutualAid.UI.Models.UserViewModel
@inject MutualAid.UI.Interfaces.IAuthViewService AuthViewService
@{
    var user = AuthViewService.GetCurrentUser();
    ViewData["Title"] = "Edit My Information";
}

<h1 class="display-4">Edit My Information</h1>
<hr />
<div>
    @Html.ActionLink("Back to Account", "MyAccount", "Account")
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edituser" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.Password" />
            <input type="hidden" asp-for="@Model.Salt" />
            <input type="hidden" asp-for="@Model.Created" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="County" class="control-label"></label>
                <select asp-for="County" asp-items="MutualAid.UI.Models.RegisterViewModel.OhioCounties" class="form-control"></select>
                <span asp-validation-for="County" class="text-danger"></span>
            </div>
            @if (user.isAdmin)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">Admin</label>
                    <p>
                        <label for="isAdmin">Yes</label>
                        <input type="radio" name="isAdmin" asp-for="isAdmin" value="true" />
                    </p>
                    <p>
                        <label for="isAdmin">No</label>
                        <input type="radio" name="isAdmin" asp-for="isAdmin" value="false" />
                    </p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

